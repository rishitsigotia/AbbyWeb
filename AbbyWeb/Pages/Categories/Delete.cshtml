@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post">
	<input hidden asp-for="Category.Id" /> 
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All" class="text-danger"></div> no more needed to show what to input*@
		<div class="mb-3">
			<label asp-for="Category.Name"></label>
			<input asp-for="@Model.Category.Name" class="form-control" disabled/>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Category.DisplayOrder"></label>
			<input asp-for="@Model.Category.DisplayOrder" class="form-control" disabled />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

		</div>
		<button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-primary" style="width:150px;">Back to list</a>
	</div>
</form>
@section Scripts{   @*Javascript*@
	@{
		<partial name="_ValidationScriptsPartial"/>  /*in built feature of partial validation page*/
	}
}